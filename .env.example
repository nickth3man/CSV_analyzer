# LLM (OpenRouter)
# Required for real LLM calls.
OPENROUTER_API_KEY=
# Overrides LLM_MODEL for OpenRouter calls. Default: meta-llama/llama-3.3-70b-instruct
OPENROUTER_MODEL=meta-llama/llama-3.3-70b-instruct

# Embeddings (OpenRouter) - optional; falls back to local embeddings if unset.
OPENROUTER_EMBEDDING_MODEL=openai/text-embedding-3-small

# Backend config overrides (config.yaml defaults shown)
NBA_DB_PATH=src/backend/data/nba.duckdb
NBA_DB_TIMEOUT=30
# Used if OPENROUTER_MODEL is unset.
LLM_MODEL=nvidia/nemotron-3-nano-30b-a3b:free
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
LOG_LEVEL=INFO

# NBA season default (format: YYYY-YY). If unset, auto-detected.
NBA_API_DEFAULT_SEASON=2023-24

# NBA API populate scripts
NBA_API_TIMEOUT=30
# Optional: set as "connect,read" (e.g., 10,60)
NBA_API_DELAY=0.6
NBA_API_MAX_RETRIES=3
NBA_API_RETRY_BACKOFF=2.0
NBA_API_PROXY=

# NBA API client (legacy/optional)
NBA_API_REQUEST_DELAY=0.6
NBA_API_CACHE_TTL=3600
NBA_API_CACHE_DIR=.nba_cache

# Not currently wired (mentioned in TODO only)
# USE_MOCK_LLM=true
